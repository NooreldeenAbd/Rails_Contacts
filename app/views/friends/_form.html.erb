      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form>
  <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :twitter, class:"form-control", placeholder:"Twitter"  %>
  </div>

  <div class="field form-group">
    <%= form.label :date_of_birth, style: "display: block" %>
    <%= form.date_field :date_of_birth, class:"form-control", placeholder:"DOB"  %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary"%>
  </div>
</form>
<% end %>
